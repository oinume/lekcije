{
  "extends": [
    ":separateMajorReleases",
    ":ignoreUnstable",
    ":prNotPending",
    ":updateNotScheduled",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":automergePatch",
    ":automergePr",
    "group:monorepos",
    "group:recommended",
    "schedule:weekends"
  ],
  "ignoreDeps": ["node", "npm"],
  "packageRules": [
    {
      "prPriority": 20,
      "matchPackageNames": [
        "go.uber.org/multierr",
        "go.uber.org/zap"
      ],
      "matchPackagePrefixes": [
        "cloud.google.com/go",
        "golang.org/x",
        "google.golang.org",
        "google-api-python-client",
        "go.opentelemetry.io"
      ],
      "extends": [
        ":automergeMinor",
        ":automergePatch",
        ":automergeDigest"
      ]
    },
    {
      "prPriority": 15,
      "extends": [":automergePatch"],
      "matchManagers": ["npm"]
    }
  ],
  "prNotPendingHours": 1,
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "timezone": "Asia/Tokyo"
}
