{
  "extends": [
    ":separateMajorReleases",
    ":ignoreUnstable",
    ":prNotPending",
    ":updateNotScheduled",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":automergePatch",
    ":automergePr",
    "group:monorepos",
    "group:recommended",
    "schedule:weekends"
  ],
  "ignoreDeps": ["node", "npm"],
  "packageRules": [
    {
      "matchPackageNames": [
        "go.uber.org/multierr"
      ],
      "matchPackagePrefixes": [
        "cloud.google.com/go",
        "golang.org/x",
        "google.golang.org/api",
        "google.golang.org/genproto",
        "google-api-python-client"
      ],
      "extends": [
        ":automergeMinor"
      ]
    }
  ],
  "prNotPendingHours": 1,
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "timezone": "Asia/Tokyo"
}
