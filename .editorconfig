# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{html,js,jsx,json,proto,rb,ts,tsx,yml,yaml,graphqls}]
indent_size = 2

[*.go]
indent_style = tab

[Makefile]
indent_style = tab
